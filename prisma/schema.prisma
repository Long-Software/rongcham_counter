generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendee {
  id             Int      @id @default(autoincrement())
  pin            String
  name           String
  business_token String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("attendees")
}

model Business {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  industry        String
  branch          String
  business_token  String
  subscription_id Int
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  // @@index([authorId, createdAt])

  @@map("businesses")
}

model Category {
  id             Int      @id @default(autoincrement())
  name           String
  acronym        String
  status         Boolean  @default(false)
  business_token String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("categories")
}

model Counter {
  id                    Int      @id @default(autoincrement())
  counter_number        String
  access_code           String
  status                Boolean  @default(false)
  attendee_id           Int
  main_category_id      Int
  secondary_category_id Int
  business_token        String
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt

  @@map("counters")
}

model Feedback {
  id               Int      @id @default(autoincrement())
  description      String?
  rating           Int?
  queue_history_id Int
  user_token       String
  business_token   String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@map("feedbacks")
}

model Notification {
  id             Int      @id @default(autoincrement())
  type           String
  description    String
  user_token     String
  business_token String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("notifications")
}

model QueueHistory {
  id             Int      @id @default(autoincrement())
  status         String
  counter_id     Int
  queue_id       Int
  attendee_id    Int
  business_token String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("queue_histories")
}

model Queue {
  id             Int       @id @default(autoincrement())
  number         Int
  start_time     DateTime?
  end_time       DateTime?
  category_id    Int
  business_token String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  @@map("queues")
}

model Subscription {
  id             Int      @id @default(autoincrement())
  name           String
  price          Float
  counter_limit  Int      @default(10)
  category_limit Int      @default(10)
  description    String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

    @@map("subscriptions")
}

model UserQueues {
  id         Int      @id @default(autoincrement())
  queue_id   Int
  user_token String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("user_queues")
}

model User {
  id           Int      @id @default(autoincrement())
  firstname    String
  lastname     String
  gender       String   @default("Male")
  dob          DateTime @default(now())
  img_url      String   @default("")
  phone_number String
  user_token   String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("users")
}
